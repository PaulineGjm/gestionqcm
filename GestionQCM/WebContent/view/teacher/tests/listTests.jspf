<%@ page import ="fr.gestionqcm.model.bo.*, java.util.*, java.text.*" %>
<div id="listeFormation" class="col-sm-12">
    <c:forEach items="${listTests}" var="test">
        <div class="test col-sm-6">
			<h4>
				<a href="${pageContext.servletContext.contextPath}/UpdateTest?id=${test.getTestId()}">
					${test.getName()}
				</a>
			</h4>
			<div>
				Durée du test : ${test.getTestDuration()}
				minute<c:if test="${test.getTestDuration() > 1}">s</c:if>
			</div>
			<%-- <c:forEach items="${test.getSections()}" var="section">
				<div class="section">
					${section.get }
				</div>
			</c:forEach> --%>
			<%-- <form class="form-inline col-sm-3" method="post" action="${pageContext.servletContext.contextPath}/UpdateTest">
				<input type="hidden" value="${test.getTestId()}" name="id"/>
				<input class="btn btn-default btn-sm" type="submit" value="Modifier" name="updatetest"/>
			</form> --%>
			<form class="form-inline col-sm-3" method="post" action="${pageContext.servletContext.contextPath}/DeleteTest">
				<input type="hidden" value="${test.getTestId()}" name="idTest"/>
				<input class="btn btn-default btn-sm" type="submit" value="Supprimer" name="deletetest"/>
			</form>
		</div>
    </c:forEach>
</div>